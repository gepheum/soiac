{
  "compilerOptions": {
    "rootDir": "./src",
    "lib": ["ES2020"],
    "target": "ES2020",
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "allowUnreachableCode": false,
    "skipLibCheck": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext"
  }
}
